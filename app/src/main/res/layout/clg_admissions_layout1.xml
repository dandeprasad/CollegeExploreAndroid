<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp"

    android:id="@+id/carrer_cardview"
    app:cardCornerRadius="10dp"
    android:layout_centerHorizontal="true"
    android:innerRadius="2dp"
 android:fadingEdge="horizontal"
    android:fadingEdgeLength="10dp"
    android:thicknessRatio="1.9"

    android.support.v7.cardview:contentPadding='3,3,3,3'
    >
    <ImageView
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/newsimgtagy">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"

        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:clickable="true"
    android:id="@+id/nitsView"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_height="150dp"
            android:layout_width="match_parent"

            android:id="@+id/newsimg">
        </ImageView>
    <ImageView
        android:layout_marginTop="75dp"
        android:layout_height="75dp"
        android:layout_width="match_parent"
android:src="#80000000"
        android:id="@+id/newsimg1">
    </ImageView>
    <ImageView
        android:layout_marginTop="75dp"
        android:layout_height="75dp"
        android:layout_width="75dp"
android:layout_marginLeft="4sp"
        android:id="@+id/newsimglogo">
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/newsimglogo"
        android:orientation="vertical"
        android:id="@+id/linearlay"
        android:layout_marginBottom="4sp"
        android:padding="4dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/CLG_HEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
        android:maxLines="3"

        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="12sp"
android:layout_marginBottom="2sp"
 />
        <TextView
            android:id="@+id/LOCATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"

            />
        <TextView
            android:id="@+id/STREAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"

            />

    <TextView
        android:id="@+id/ADMISSIONID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:visibility="gone"
        />

</LinearLayout>

    <!-- android:textColor="#909699"  -->
    </RelativeLayout>

        <TextView
            android:id="@+id/ADMISSION_DETAILS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="3"

            android:ellipsize="end"
            android:textColor="@color/app_theme"
            android:textSize="12sp"
            android:layout_marginBottom="2sp"
            />
        <TextView
            android:id="@+id/POSTED_DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

android:layout_gravity="end"
            android:layout_margin="2dp"
            android:textColor="@color/app_theme"
            android:textSize="10sp"

            />
    </LinearLayout>
    <Button
        android:id="@+id/tag_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:background="@color/app_theme1"
        android:elevation="15dp"
        android:layout_gravity="left"
        android:visibility="gone"
        android:text="@string/loading" />
</android.support.v7.widget.CardView>
