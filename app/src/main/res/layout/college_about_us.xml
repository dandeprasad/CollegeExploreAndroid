<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:id="@+id/carrerGuidance_layout_upper">

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"

        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/appbar"
                    android:id="@+id/reviw_cardview"
                    app:cardCornerRadius="6sp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    app:contentPadding="5dp"

                    app:layout_scrollFlags="enterAlways"
                    app:cardElevation="4dp"


                    android:thicknessRatio="1.9"
                    android.support.v7.cardview:contentPadding='2,2,2,2'>

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
<Button
    android:layout_width="wrap_content"
    android:text="Write a Review"
    android:id="@+id/write_review"
    android:textSize="10dp"
    android:layout_height="30dp" />
                        <TextView
                            android:id="@+id/overallrat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/Black"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                        <RatingBar
                            android:id="@+id/overallBar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/overallrat"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:numStars="1"
                            android:theme="@style/RatingBar" />
                        <TextView
                            android:id="@+id/overallrat1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                          android:layout_marginTop="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/overallrat"
                            android:textSize="14dp"
                            android:text="Total Ratings -"
                            />

                        <View xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/viewline"
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="57dp"
                            android:layout_marginStart="57dp"

                            android:layout_toEndOf="@+id/overallBar1"
                            android:layout_toRightOf="@+id/overallBar1"
                            android:background="#B3B3B3" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_toRightOf="@+id/viewline"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                          android:id="@+id/first"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@+id/fcBar1"
                            android:textColor="@color/Black"
                            android:layout_height="wrap_content"
                            android:text="Faculty          "/>
                        <RatingBar
                            android:id="@+id/fcBar1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/camBar1"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/camBar1"
                            android:isIndicator="true"

                            android:numStars="5"
                            android:theme="@style/RatingBar" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/second"
                            android:layout_below="@+id/first"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@+id/camBar1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:text="Campus"/>
                        <RatingBar
                            android:id="@+id/camBar1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fcBar1"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_toEndOf="@+id/viewline"
                            android:layout_toRightOf="@+id/viewline"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:theme="@style/RatingBar" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/third"
                            android:layout_below="@+id/second"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@+id/envBar1"
                            android:textColor="@color/Black"
                            android:layout_height="wrap_content"
                            android:text="Environment "/>
                        <RatingBar
                            android:id="@+id/envBar1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/camBar1"

                            android:layout_toEndOf="@+id/viewline"
                            android:layout_toRightOf="@+id/viewline"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:theme="@style/RatingBar" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"

                            android:layout_below="@+id/third"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@+id/placBar1"
                            android:textColor="@color/Black"
                            android:layout_height="wrap_content"
                            android:text="Placements  "/>
                        <RatingBar
                            android:id="@+id/placBar1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/envBar1"
                            android:layout_toEndOf="@+id/viewline"
                            android:layout_toRightOf="@+id/viewline"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:theme="@style/RatingBar" />
                        </LinearLayout>
                    </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/appbar"
                    android:id="@+id/carrer_cardview"
                    app:cardCornerRadius="6sp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    app:contentPadding="5dp"

                    app:layout_scrollFlags="enterAlways"
                    app:cardElevation="4dp"


                    android:thicknessRatio="1.9"
                    android.support.v7.cardview:contentPadding='2,2,2,2'>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wikitext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/imageView"
                        android:layout_toStartOf="@+id/imageView"
                        android:fontFamily="arial"
                        android:gravity="right"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingRight="2dp"
                        android:paddingTop="6dp"
                        android:text="Feteched from Wikipedia"
                        android:textColor="@color/LightSlateGray"
                        android:textSize="15sp" />
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            android:gravity="right"
                            android:src="@drawable/wikipedia"
                            android:id="@+id/imageView" />
    <TextView
        android:id="@+id/about_us_text"
        android:layout_below="@+id/wikitext"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="2dp"
        android:layout_gravity="center"
        android:paddingRight="2dp"
        android:paddingTop="6dp"
        android:lineSpacingMultiplier="1.2"
        android:fontFamily="arial"
        android:textSize="15sp"
        android:textColor="@color/Black"
        android:text="Feteching from Wikipedia"
        />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/about_us_text"
                            android:gravity="bottom|end"
                            android:text="View More..."
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/appbar"
                    android:id="@+id/phonenumber"
                    android:minHeight="40dp"
                    app:cardCornerRadius="6sp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    app:contentPadding="5dp"

                    app:layout_scrollFlags="enterAlways"
                    app:cardElevation="4dp"
                    android:thicknessRatio="1.9"
                    android.support.v7.cardview:contentPadding='2,2,2,2'>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_phno"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar android:indeterminate="true"
        android:layout_width="50dp" android:layout_height="50dp"
        android:id="@+id/marker_progress" style="?android:attr/progressBarStyle"
        android:layout_gravity="center"

        android:layout_centerInParent="true"
        android:theme="@style/AppTheme.AppAccent"
        android:visibility="gone"
        />

    </RelativeLayout>
