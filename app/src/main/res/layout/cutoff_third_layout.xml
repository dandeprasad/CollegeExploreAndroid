<?xml version="1.0" encoding="utf-8"?>

 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:elevation="15dp"
android:padding="3dp"
                    android:layout_margin="2dp"
                    android:id="@+id/carrer_cardview"
                    app:cardCornerRadius="3dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="2dp"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="10dp"
                    android:thicknessRatio="1.9"

                    android.support.v7.cardview:contentPadding='3,3,3,3'
                    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/CLG_NAME"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="arial"
                        android:maxLines="3"
android:layout_margin="4dp"
                        android:ellipsize="end"
                        android:textColor="@color/app_theme"
                        android:textSize="16sp"
                        android:layout_marginBottom="2sp"
                        />
    <Button
        android:id="@+id/ROUND"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/CLG_NAME"
       android:fontFamily="arial"

        android:textColor="@color/white"
        android:background="@drawable/textinputborder4"
        android:textSize="10sp"
        android:layout_margin="4dp"
        android:layout_marginBottom="2sp"
        />
    <TextView
        android:id="@+id/STREAMTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:visibility="gone"
        android:layout_margin="4dp"
        android:fontFamily="arial"
        android:layout_below="@+id/CLG_NAME"
        android:ellipsize="end"
        android:textColor="@color/app_theme"
        android:textSize="10sp"
        android:layout_marginBottom="2sp"
        />
    <Button
        android:id="@+id/table_header"
        android:layout_width="match_parent"
        android:layout_below="@+id/STREAMTXT"
android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    </Button>
                    <HorizontalScrollView
                        android:id="@+id/hscrll1"
                        android:layout_below="@+id/table_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >


                <TableLayout
                    android:id="@+id/table_main_carrer"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                   android:layout_gravity="start" >
                </TableLayout>
                    </HorizontalScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>


