<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e3e6ed"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:layout_below="@+id/appbar"
        android:id="@+id/carrer_cardview"
        app:cardCornerRadius="6sp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        app:contentPadding="5dp"
android:minHeight="30dp"
        app:layout_scrollFlags="enterAlways"
        app:cardElevation="4dp"


        android:thicknessRatio="1.9"
        android.support.v7.cardview:contentPadding='2,2,2,2'>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_depart"
        android:layout_height="wrap_content">

    </LinearLayout>
</android.support.v7.widget.CardView>

<ProgressBar android:indeterminate="true"
android:layout_width="50dp" android:layout_height="50dp"
android:id="@+id/marker_progress" style="?android:attr/progressBarStyle"
android:layout_gravity="center"

android:layout_centerInParent="true"
android:theme="@style/AppTheme.AppAccent"
android:visibility="gone"
    />

    </RelativeLayout>
