
<LinearLayout android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:layout_below="@+id/appbar"
        android:id="@+id/phonenumber"
        android:minHeight="40dp"
        app:cardCornerRadius="6sp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        app:contentPadding="5dp"

        app:layout_scrollFlags="enterAlways"
        app:cardElevation="4dp"
        android:thicknessRatio="1.9"
        android.support.v7.cardview:contentPadding='2,2,2,2'>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="8dp"
        android:background="@drawable/ripple_effect2"
        android:orientation="vertical">

        <TextView
            android:text="Events List"
            android:id="@+id/fest_static_eventdetails"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="15dp"
            android:padding="4dp"
            android:textColor="#872c59"
            android:layout_height="wrap_content"
 />

        <TextView
            android:text=""
            android:id="@+id/fest_data_fest_eventdetails"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:padding="4dp"
            android:layout_marginLeft="3dp"

            android:textColor="@color/Black"
            android:layout_height="wrap_content"
            android:textStyle="normal"
             />

    </LinearLayout>
    </android.support.v7.widget.CardView>
