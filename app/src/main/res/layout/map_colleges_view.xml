    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"

        android:layout_width="80dp"
        android:layout_height="80dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/view112"
        app:cardCornerRadius="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:innerRadius="0dp"
app:cardElevation="10dp"
        app:cardBackgroundColor="#50000000"

android:alpha="0.7"
        android:thicknessRatio="1.9"
        android.support.v7.cardview:contentPadding='2,2,2,2'>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/college_logoimg"
            android:scaleType="fitXY"


            >
        </ImageView>
    </android.support.v7.widget.CardView>
            </RelativeLayout>
            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/view_line1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phonetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:textColor="@color/MidnightBlue"
                android:text="Ph No:"
                android:textStyle="bold"
                android:fontFamily="arial"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:id="@+id/college_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/phonetxt"
                android:fontFamily="arial"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:singleLine="false"
                android:text="@string/college_explore"
                android:textColor="@color/MidnightBlue"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/college_website"
                android:fontFamily="arial"
                android:autoLink="email"
                android:textStyle="bold"

                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:textColor="@color/MidnightBlue"
                android:text="@string/college_explore"
                />
        </RelativeLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_line1" />
            <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/nestedmap"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:id="@+id/carrer_cardview1"
                        app:cardCornerRadius="2sp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="13dp"
                        app:layout_scrollFlags="enterAlways"
                        app:cardElevation="20dp"
                        android:background="#ffffff"
                        android:thicknessRatio="1.9"
                        android.support.v7.cardview:contentPadding='2,2,2,2'>

                    >
        <collegeexplore.view.SlidingTabLayout
            android:id="@+id/sliding_tabs1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@color/white"

           />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:id="@+id/carrer_cardview"
                        app:cardCornerRadius="2sp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"

                        android:elevation="13dp"
                        app:layout_scrollFlags="enterAlways"
                        app:cardElevation="10dp"
                        android:background="#ffffff"
                        android:thicknessRatio="1.9"
                        android.support.v7.cardview:contentPadding='2,2,2,2'>

                    >
        <android.support.v4.view.ViewPager
            android:id="@+id/CollegeViewpager"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:background="@android:color/white"
           />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_line1" />


