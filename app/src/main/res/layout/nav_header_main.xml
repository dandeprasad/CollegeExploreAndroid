<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_container"
    android:layout_width="match_parent"

    android:layout_height="@dimen/nav_header_height"
    android:layout_centerVertical="true"
    android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/img_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

android:foreground="#80000000"
        android:src="@drawable/collegeexplore" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:orientation="horizontal"
        >

        <ImageView

            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"

            android:id="@+id/carduserImageimg" />

        <TextView
            android:id="@+id/USERNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:paddingTop="6dp"
            android:paddingLeft="2dp"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_toRightOf="@+id/carduserImageimg"
            android:layout_toEndOf="@+id/carduserImageimg"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/website_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/USERNAME"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/USERADDRESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>
