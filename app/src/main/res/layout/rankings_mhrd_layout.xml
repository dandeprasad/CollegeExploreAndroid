<?xml version="1.0" encoding="utf-8"?>

 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:elevation="15dp"
android:padding="3dp"
                    android:layout_margin="2dp"
                    android:id="@+id/carrer_cardview"
                    app:cardCornerRadius="3dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="2dp"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="10dp"
                    android:thicknessRatio="1.9"

                    android.support.v7.cardview:contentPadding='3,3,3,3'
                    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/table_header"
        android:layout_width="match_parent"
        android:layout_below="@+id/STREAMTXT"
android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    </Button>
                    <HorizontalScrollView
                        android:id="@+id/hscrll1"
                        android:layout_below="@+id/table_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >


                <TableLayout
                    android:id="@+id/table_main_carrer"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                   android:layout_gravity="start" >
                </TableLayout>
                    </HorizontalScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>


