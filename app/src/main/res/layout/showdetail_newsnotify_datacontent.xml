<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/carrer_cardview"
    app:cardCornerRadius="10dp"
    android:layout_centerHorizontal="true"
    android:innerRadius="0dp"
    android:thicknessRatio="1.9"
    android.support.v7.cardview:contentPadding='2,2,2,2'>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shownewsnotifyLayout">

        <ImageView
            android:layout_height="100dp"
            android:layout_width="fill_parent"
            android:id="@+id/shownewsnotifydetail"
            android:src="@drawable/load_mask"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
        <TextView
            android:id="@+id/carrer_cardview_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"


            android:textSize="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="#cd40294a"

            android:text="@string/college_explore"

            android:minHeight="?android:attr/listPreferredItemHeightSmall" />
    </LinearLayout>
</android.support.v7.widget.CardView>
